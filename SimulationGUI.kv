#:kivy 2.1.0

<SimulationController>
    BoxLayout:
        width: root.width
        orientation: "horizontal"
        BoxLayout:
            orientation: "vertical"
            
            Slider:
                id: num_people
                min: 1
                max: 100
                step: 1
                orientation: "horizontal"
            Label:
                text: str(num_people.value) + " People"
            
            Slider:
                id: num_food
                min: 1
                max: 100
                step: 1
                orientation: "horizontal"
            Label:
                text: str(num_food.value) + " Food"

        Button:
            id: start_but
            size_hint_x: .3
            on_press: app.run_sim(root.ids.num_people.value, root.ids.num_food.value)
            text: "Start Simulation"

